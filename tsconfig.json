{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "checkJs": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "paths": {
      "@*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
